<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadDataBuktiActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">
            <ImageView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/foto_sekolahbukti"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/ab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selesai Pada Pukul :"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/jamsampai"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/ab"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selesai Pada Pukul :"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:id="@+id/aa"/>

                <TextView
                    android:id="@+id/jamselesai"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/aa"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Guru :"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:id="@+id/ac"/>

                <TextView
                    android:id="@+id/tv_namaguru"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/ac"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kontak Sekolah :"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:id="@+id/ad"/>

                <TextView
                    android:id="@+id/tv_kontaksekolah"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/ad"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kendala :"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:id="@+id/ae"/>

                <TextView
                    android:id="@+id/tv_kendala"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/ae"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </RelativeLayout>


            <ImageView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/foto_kendala"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Catatan :"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:id="@+id/af"/>

                <TextView
                    android:id="@+id/tv_catatan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/af"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bukti Sosialisasi :"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/foto_sosialisasi"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>